# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ALLOWED_USER_ID=your_telegram_user_id_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Sheets Configuration
# Base64 encode your Google service account JSON key:
# Linux/Mac: base64 -w 0 your-service-account-key.json
# Windows: certutil -encode your-service-account-key.json encoded.txt (then remove headers)
GOOGLE_SHEETS_CREDENTIALS_BASE64=your_base64_encoded_credentials_here
GOOGLE_SHEET_KEY=your_google_spreadsheet_id_here

# Timezone (default: Europe/Moscow)
TIMEZONE=Europe/Moscow
